<resources>

    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault" />

    <style name="MainActivityTheme" parent="AppBaseTheme">
        <item name="knife_bulletColor">@color/primary</item>
        <item name="knife_bulletGap">8dp</item>
        <item name="knife_bulletRadius">2dp</item>
        <item name="knife_linkColor">@color/primary</item>
        <item name="knife_linkUnderline">true</item>
        <item name="knife_quoteColor">@color/primary</item>
        <item name="knife_quoteGap">8dp</item>
        <item name="knife_quoteStripeWidth">2dp</item>
    </style>

    <style name="FormatButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
